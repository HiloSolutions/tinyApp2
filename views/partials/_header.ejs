<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if(!user){ %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>

        <div class="form-inline ml-auto">
          <form class="form-inline ml-auto" action="/login" method="GET">
            <button type="submit" class="btn text-white">Login</button>
          </form>
          <form class="nav-item form-inline ml-auto" action="/register" method="GET">
            <button type="submit" class="btn text-white">Register</button>
          </form>
        </div>

      </div>
      <% } else{ %>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link" href="/urls">My URLs</a>
            <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          </div>

          <form class="form-inline ml-auto" action="/logout" method="POST">
            <div class="form-group">
              <label class="mr-3">Logged In As: <%= user.email %></label>
              <button type="submit" class="btn btn-outline-dark">Logout</button>
            </div>
          </form>
        </div>
        <% } %>

  </nav>
</header>